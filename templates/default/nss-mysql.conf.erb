users.userid_column = <%= @users_table -%>.user_id;
users.uid_column = <%= @users_table -%>.uid;
users.gid_column = <%= @users_table -%>.gid;
users.realname_column = <%= @users_table -%>.realname;
users.homedir_column = <%= @users_table -%>.homedir;
users.shell_column = <%= @users_table -%>.shell;
groups.group_info_table = <%= @groups_table -%>;
